<%- include('partials/_header.ejs') -%>


<body>

  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Shafiqullah Turkmen</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2> <%= post.title %> </h2>
          <p class="subheading"><%= post.detail %></p>
          <span class="meta">Posted by
            <a href="#">Shafiqullah Turkmen</a>
            on <%= post.dateCreated.toDateString() %></span>

        </div>

        <div class="col-xl-4 col-lg-5">
          <!-- Share box -->
          <div class="tm-bg-gray tm-share-box">
            <div class="text-center">
              <a href="/posts/edit/<%= post._id  %>" class="btn btn-primary mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Post</span></a>	
            </div>	
            <div class="text-center">
              <form method="POST" action="/posts/<%= post._id %>?_method=DELETE">
                <button onclick="return confirm('Are you sure?')" class="btn btn-danger mb-4 tm-btn-animate tm-btn-download tm-icon-download" type="submit">Delete Post</button>
              </form>
            </div>								
          </div>
        </div>

      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer.ejs') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
